extends layout

block content
  section#create-invoice

  script#create-invoice-template(type="text/ractive")
    .row
      .columns
        h1= __("Create invoice")

        form
          select(value="{{client}}")
            option(disabled selected)= __("Choose client")
            | {{#each clients}}
            option(value="{{._id}}") {{.name}}
            | {{/each}}

    | {{#if projects.length}}
    form(on-submit="prepareInvoice")
      .row
        .columns

          select(value="{{project}}")
            option(value="" selected)= __("All")
            | {{#each projects}}
            option(value="{{._id}}") {{.name}}
            | {{/each}}

      .row
        .columns
          h1= __("Hours, not invoiced")
          | {{#each filteredHours}}
          .row
            .columns.small-1
              label
                input(type="checkbox" name="{{selected}}" value="{{.}}")
            .columns.small-3
              | {{.project}}
            .columns.small-2
              | {{.date}}
            .columns.small-3
              | {{.start}}
            .columns.small-3
              | {{.end}}
          | {{/each}}

      .row
        .columns
          button= __("Select hours")
    | {{/if}}

    | {{#if selectedHours.length}}
    form(on-submit="saveInvoice")
      ul#selectedHours
        | {{#each selectedHours}}
        li.row
          .columns.medium-6
            h2 {{.project.name}}
            p {{.date}} {{.start}} {{.end}} {{.duration}}
          .columns.medium-6
            textarea(value="{{.comment}}")
        | {{/each}}
      .row
        .columns
          button= __("Save")
    | {{/if}}

block javascript
  script
    | require('s7n').tracker.invoice(
    != JSON.stringify(clients)
    | );

