extends layout

block content
  section#projects

  script#template(type="text/ractive")
    .row
      .columns.medium-6
        ul
          | {{#projects}}
          li
            a(href="/?project={{._id}}") {{name}} ({{client}})
          | {{/projects}}

    .row
      .columns.medium-6
        .row
          .columns
            h1= __('New project')

        form(on-submit="createProject")
          .row
            .columns
              label= __('Project name')
              input#name(type="text" name="name")
          .row
            .columns
              label= __('Client')
              input#client(type="text" name="client")
          .row
            .columns
              button= __('Save')

block javascript
  script
    | require('s7n').tracker.projects(
    != JSON.stringify(projects)
    | );
